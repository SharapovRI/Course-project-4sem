<UserControl x:Class="Курсовой_проект_4_семестр.Pages.CapturedPacketsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Курсовой_проект_4_семестр.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Width="Auto" Height="Auto">
    <Grid Height="auto" Width="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="87*"/>
            <RowDefinition/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <Button Content="Button" Margin="1,10,694,10" Click="Button_Click" Grid.Row="0" Grid.Column="0"/>
        <ListView x:Name="listOfPackets" Margin="0,0,0,7" Grid.Row="1" Grid.Column="0" MouseDoubleClick="listOfPackets_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Number}" Width="50">№</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Time}" Width="100">Time</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Source}" Width="150">Source</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Destination}" Width="150">Destination</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Protocol}" Width="100">Protocol</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Length}" Width="100">Length</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" Margin="0,0,0,0"/>

    </Grid>
</UserControl>
